# Application
APP_NAME=DongneFit Backend
DEBUG=false
API_V1_PREFIX=/api/v1
BACKEND_URL=http://localhost:8000

# Frontend URLs
FRONTEND_CLIENT_APP_URL=http://localhost:5173
FRONTEND_ADMIN_APP_URL=http://localhost:5174

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/realestate
DATABASE_ECHO=false

# Session
SECRET_KEY=your-secret-key-change-in-production
SESSION_EXPIRE_DAYS=7

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# OAuth - Kakao
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_CALLBACK_URL=http://localhost:8000/api/auth/kakao/callback

# OpenAI (for content generation)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Map Service (naver, google)
MAP_PROVIDER=naver
MAP_API_KEY=your-map-api-key

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET=your-s3-bucket-name

# Selenium
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
